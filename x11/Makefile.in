view.o: $(ncurses_testdir)/view.c $(PDCURSES_CURSES_H)
	$(CC) $(CCFLAGS) $(NCFLAGS) $(ncurses_testdir)/view.c

ncurses.o: $(ncurses_testdir)/ncurses.c $(PDCURSES_CURSES_H)
